body {
	font-family: "微软雅黑";
}

html,
body {
	width: 100%;
	height: 100%;
	overflow: hidden;
	font-weight: 400;
	font-size: 1em;
	line-height: 1.25;
	font-family: 'Raleway', Calibri, Arial, sans-serif;
}

.mui-content {
	width: 100%;
	height: 100%;
	background: url(../../images/bg.png) top center no-repeat;
	background-size: cover;
}

.mui-input-row label {
	width: 25%;
}

.mui-input-row label~input,
.mui-input-row label~select,
.mui-input-row label~textarea {
	width: 70%;
	padding-top: 16px;
}

.input_outer {
	height: 46px;
	padding: 0 5px;
	margin-bottom: 20px;
	border-radius: 50px;
	position: relative;
	border: #d6d6d6 1px solid !important;
}

.loginTop {
	width: 100%;
	text-align: center;
}

.titleText {
	color: white;
	font-size: 40px;
	position: absolute;
	top: 5%;
	width: 100%;
}


/*///*/

.mb2 {
	margin-top: 38px;
	margin-bottom: 38px
}

.mb2 a {
	text-decoration: none;
	outline: none;
}

.submit {
	padding: 15px;
	margin-top: 20px;
	display: block;
}

.act-but {
	line-height: 10px;
	text-align: center;
	font-size: 18px;
	border-radius: 50px;
	background: #63aeff;
}

.login_box {
	width: 84%;
	position: absolute;
	top: 16%;
	left: 8%;
	right: 0px;
	bottom: 0px;
	padding: 0;
	margin: 0;
}

#footer {
	height: 40px;
	line-height: 40px;
	margin-top: 120px;
	width: 100%;
	text-align: center;
	font-family: Arial;
	font-size: 12px;
	letter-spacing: 1px;
}
#bdiv {
	width: 200px;
	height: 33px;
	margin: 20px 65px 0px ;
	padding: 4px 0;
	border-radius: 15px;
	background-color: rgba(0, 0, 0, .4);
	font-size: 20px;
	color: #fff;
	text-shadow: 1px 1px 1px rgba(0, 0, 0, .4);
	text-align: center;
}
#forget>a {
	color: #999;
	font-size: 12px;
	margin-left: 2px;
	text-decoration: none;
}