#bdiv {
	width: 150px;
	height: 23px;
	margin: 20px 65px 0px;
	padding: 4px 0;
	border-radius: 15px;
	background-color: rgba(0, 0, 0, .4);
	font-size: 12px;
	color: #fff;
	text-shadow: 1px 1px 1px rgba(0, 0, 0, .4);
	text-align: center;
}

#bdiv>a {
	color: #ffa800;
	margin-left: 6px;
	text-decoration: none;
}
.register_box {
	width: 84%;
	position: absolute;
	top: 8%;
	left: 8%;
	right: 0px;
	bottom: 0px;
	padding: 0;
	margin: 0;
}
